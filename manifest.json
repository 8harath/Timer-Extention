{
  "manifest_version": 3,
  "name": "Time Limit Reminder",
  "version": "1.0",
  "description": "Helps users manage their time spent on websites by setting time limits and providing reminders",
  "permissions": [
    "storage",
    "notifications",
    "tabs",
    "alarms"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}